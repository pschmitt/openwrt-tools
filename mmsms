        DEBUG_FLAGS+=("$1=$2")
        SMS_RETRY_COUNT="$2"
        shift 2
        continue
        ;;
      --delete-sent)
        DEBUG_FLAGS+=("$1")
        WATCH_DELETE_AFTER=1
        WATCH_DELETE_AFTER_CLI_OVERRIDE=1
        shift
        continue
        ;;
      --)
        shift
        while (( $# > 0 ))
        do
          out+=("$1")
          shift
